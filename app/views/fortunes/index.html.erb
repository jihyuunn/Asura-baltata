<p id="notice"><%= notice %></p>

<h1>Fortunes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fortunes.each do |fortune| %>
      <tr>
        <td><%= fortune.title %></td>
        <td><%= fortune.description %></td>
        <td><%= fortune.rating %></td>
        <td><%= fortune.image %></td>
        <td><%= link_to 'Show', fortune %></td>
        <td><%= link_to 'Edit', edit_fortune_path(fortune) %></td>
        <td><%= link_to 'Destroy', fortune, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fortune', new_fortune_path %>
